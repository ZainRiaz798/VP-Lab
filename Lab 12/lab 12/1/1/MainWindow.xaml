<Window x:Class="_233597_Activity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <!-- Display CurrentTime -->
        <TextBlock Text="{Binding CurrentTime, RelativeSource={RelativeSource AncestorType=Window}, StringFormat=F}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16" />

        <!-- Button to Update Time -->
        <Button Content="Update Time"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,50"
                Click="UpdateTimeButton_Click" />
    </Grid>
</Window>