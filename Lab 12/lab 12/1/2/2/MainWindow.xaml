<Window x:Class="_233597_Activity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Current Time App" Height="350" Width="525">
    <Grid>
        <TextBlock Text="{Binding CurrentTime, RelativeSource={RelativeSource AncestorType=Window}}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
        <Button Content="Update Time" Width="100" Height="30" Click="UpdateTimeButton_Click"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" />
    </Grid>
</Window>